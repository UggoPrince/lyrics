<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ugo.lyrics">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lyrics"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup">
        <activity
            android:name=".SavedLyricsDetailsActivity"
            android:theme="@style/Theme.Lyrics.NoActionBar"
            android:label="@string/lyrics_view"
            android:exported="false" />
        <activity
            android:name=".SavedLyricsActivity"
            android:exported="false"
            android:label="Saved Lyrics"
            android:theme="@style/Theme.Lyrics.NoActionBar" />
        <activity
            android:name=".LyricsActivity"
            android:label="@string/lyrics_view"
            android:theme="@style/Theme.Lyrics.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lyrics.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>